#!/bin/bash
set -euo pipefail

args=(
  .
  --ignore-path .gitignore
  --cache
  --cache-strategy content
  --cache-location ./node_modules/.cache/eslint
  --max-warnings 1000
)

if [[ ! -z "${FIX_ESLINT:-}" ]]; then
  args+=("--fix")
fi

# get additional args
while [[ $# -gt 0 ]]; do
  args+=("$1")
  shift
done

eslint "${args[@]}"
